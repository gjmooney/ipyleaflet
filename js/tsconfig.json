{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "noImplicitAny": true,
    "types": ["node", "webpack-env"]
  },
  "exclude": ["src/**/__tests__", "lib/**"]
}
